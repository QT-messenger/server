{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default-preset",
            "generator": "Ninja",
            "binaryDir": "build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": {
                  "type": "STRING",
                  "value": "clang++"
                },
                "CMAKE_CXX_STANDARD": {
                  "type": "STRING",
                  "value": "20"
                }
            }
        },
        {
            "inherits": "default-preset",
            "name": "Release",
            "displayName": "Release preset for project.",
            "binaryDir": "build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "inherits": "default-preset",
            "name": "Debug",
            "displayName": "Debug preset for project.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "inherits": "default-preset",
            "name": "RelWithDebInfo",
            "displayName": "RelWithDebInfo preset for project.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "inherits": "default-preset",
            "name": "MinSizeRel",
            "displayName": "MinSizeRel preset for project.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Build"
        },
        {
            "name": "CleanBuild",
            "cleanFirst": true
        },        
        {
            "name": "BuildDefault",
            "inherits":"Build",
            "displayName": "Build",
            "configurePreset":"default-preset",
            "configuration":"Debug"
        },
        {
            "name": "CleanBuildDefault",
            "inherits":"CleanBuild",
            "displayName": "Clean ReBuild",
            "configurePreset":"default-preset",
            "configuration":"Debug"
        },
        {
            "name": "BuildRelease",
            "inherits":"Build",
            "displayName": "Build",
            "configurePreset":"Release",
            "configuration":"Release"
        },
        {
            "name": "CleanBuildRelease",
            "inherits":"CleanBuild",
            "displayName": "Clean ReBuild",
            "configurePreset":"Release",
            "configuration":"Release"
        },
        {
            "name": "BuildDebug",
            "inherits":"Build",
            "displayName": "Build",
            "configurePreset":"Debug",
            "configuration":"Debug"
        },
        {
            "name": "CleanBuildDebug",
            "inherits":"CleanBuild",
            "displayName": "Clean ReBuild",
            "configurePreset":"Debug",
            "configuration":"Debug"
        },
        {
            "name": "BuildRelWithDebInfo",
            "inherits":"Build",
            "displayName": "Build",
            "configurePreset":"RelWithDebInfo",
            "configuration":"Debug"
        },
        {
            "name": "CleanBuildRelWithDebInfo",
            "inherits":"CleanBuild",
            "displayName": "Clean ReBuild",
            "configurePreset":"RelWithDebInfo",
            "configuration":"Release"
        },
        {
            "name": "BuildMinSizeRel",
            "inherits":"Build",
            "displayName": "Build",
            "configurePreset":"MinSizeRel",
            "configuration":"Release"
        },
        {
            "name": "CleanBuildMinSizeRel",
            "inherits":"CleanBuild",
            "displayName": "Clean ReBuild",
            "configurePreset":"MinSizeRel",
            "configuration":"Release"
        }
    ]
}